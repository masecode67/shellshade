{
  "appId": "com.shellshade.app",
  "productName": "ShellShade",
  "directories": {
    "output": "out"
  },
  "files": [
    "dist/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/builtin-themes",
      "to": "builtin-themes",
      "filter": ["**/*"]
    }
  ],
  "asar": true,
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "resources/entitlements.mac.plist",
    "entitlementsInherit": "resources/entitlements.mac.plist",
    "icon": "resources/icons/icon.icns"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*"
  ]
}
