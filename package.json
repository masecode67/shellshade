{
  "name": "shellshade",
  "version": "0.1.0",
  "description": "Terminal theme manager for macOS, Windows, and Linux",
  "main": "dist/main/index.js",
  "bin": {
    "shellshade": "./dist/cli/index.js"
  },
  "author": "masecode67",
  "license": "MIT",
  "homepage": "https://github.com/masecode67/shellshade#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masecode67/shellshade.git"
  },
  "bugs": {
    "url": "https://github.com/masecode67/shellshade/issues"
  },
  "keywords": [
    "terminal",
    "theme",
    "color-scheme",
    "cli",
    "iterm2",
    "windows-terminal",
    "alacritty",
    "kitty",
    "gnome-terminal",
    "warp",
    "macos",
    "linux",
    "windows"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:vite && npm run build:main && npm run build:preload && npm run build:cli",
    "build:vite": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:cli": "tsc -p src/cli/tsconfig.json",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist out",
    "cli": "node dist/cli/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "chalk": "^4.1.2",
    "culori": "^4.0.1",
    "enquirer": "^2.4.1",
    "plist": "^3.1.0",
    "uuid": "^11.0.3",
    "yaml": "^2.6.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
